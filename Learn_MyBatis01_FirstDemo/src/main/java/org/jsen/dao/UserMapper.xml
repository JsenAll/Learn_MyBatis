<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--绑定一个对应的mapper接口-->
<mapper namespace="org.jsen.dao.UserMapper">
    <!--   id 对应接口中的方法-->
    <select id="selectUser" resultType="org.jsen.pojo.User">
                select * from user
    </select>
    <!--根据id查询用户-->
    <select id="getUserById" resultType="org.jsen.pojo.User">
               select * from user where id=#{id}
    </select>

    <insert id="addUser" parameterType="org.jsen.pojo.User">
        insert into user (id,name,pwd) value (#{id},#{name},#{pwd});
    </insert>

    <update id="upDateUser" parameterType="org.jsen.pojo.User">
        update user set name =#{name} ,pwd=#{pwd} where id=#{id};
    </update>

    <delete id="delUser" parameterType="int">
        delete from user where id=#{id}
    </delete>


</mapper>